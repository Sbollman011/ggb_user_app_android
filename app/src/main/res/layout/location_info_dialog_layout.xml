<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/main_top_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location_popup_transparent"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:elevation="@dimen/dimen_4"
            card_view:cardCornerRadius="@dimen/dimen_4">

            <LinearLayout
                android:id="@+id/main_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/navigation_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/dimen_4"
                        card_view:cardCornerRadius="@dimen/dimen_4">

                        <RelativeLayout
                            android:id="@+id/top_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen_8"
                            android:paddingTop="@dimen/dimen_8">

                            <LinearLayout
                                android:id="@+id/web_ll"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"


                                android:layout_toLeftOf="@+id/centre_view"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/location_popup_web" />

                                <TextView
                                    android:id="@+id/web_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/web"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>

                            <View
                                android:id="@+id/centre_view"
                                android:layout_width="@dimen/dimen_100"

                                android:layout_height="@dimen/dimen_10"
                                android:layout_centerHorizontal="true" />

                            <LinearLayout
                                android:id="@+id/yelp_ll"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"

                                android:layout_toRightOf="@+id/centre_view"

                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/location_popup_yelp" />

                                <TextView
                                    android:id="@+id/yelp_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/yelp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view1"
                        android:src="@drawable/location_popup_down_shad" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view1"
                        android:background="#FCFCFC"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_of_product_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_30"
                            android:text="Uneenda Burger"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/category_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burger/American"
                            android:textSize="@dimen/font_14" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingBar_ll"
                            android:layout_marginTop="@dimen/dimen_10">
<!--
                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:isIndicator="true" />-->

                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/ratingBar1"
                                android:layout_height="wrap_content"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/ratingBar2"
                                android:layout_height="wrap_content"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/ratingBar3"
                                android:layout_height="wrap_content"
                               />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar4"
                               />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/ratingBar5"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/product_Address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:background="@color/light_grey" />

                        <TextView
                            android:id="@+id/description_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/dimen_2"
                            android:padding="@dimen/dimen_10"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="@dimen/dimen_10"
                            android:text="@string/close"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_iv"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_user_pop_up"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:src="@drawable/location_popup_cancel" />

</RelativeLayout>