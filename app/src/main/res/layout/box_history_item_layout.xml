<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:elevation="@dimen/dimen_10"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/main_rl"
                android:layout_width="@dimen/dimen_90"
                android:layout_height="@dimen/dimen_96"
                android:layout_gravity="left"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_2"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/item_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/item_serial_number_tv"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/item_serial_number_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_toRightOf="@+id/main_rl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/vender_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_tv"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/still_with_you_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vender_name_tv"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_20"
                    android:textColor="@color/grey_lt_div"
                    android:textSize="@dimen/font_14" />

            </RelativeLayout>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dimen_6"
                android:text="30 min."
                android:textSize="@dimen/font_10"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
